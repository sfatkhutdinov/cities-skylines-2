{
    "hardware": {
        "batch_size": 64,
        "learning_rate": 1e-4,
        "device": "auto",
        "resolution": [320, 240],
        "frame_stack": 4,
        "frame_skip": 2,
        "use_fp16": false,
        "cpu_threads": 0,
        "force_cpu": false,
        "gpu_util_target": 0.8,
        "gpu_temp_threshold": 80,
        "cpu_util_target": 0.8,
        "target_fps": 30,
        "gamma": 0.99,
        "ppo_epochs": 4,
        "clip_range": 0.2,
        "value_loss_coef": 0.5,
        "entropy_coef": 0.01,
        "max_grad_norm": 0.5,
        "gae_lambda": 0.95
    },
    "training": {
        "num_episodes": 10000,
        "max_steps": 1000,
        "checkpoint_dir": "checkpoints",
        "use_wandb": false,
        "checkpoint_freq": 100,
        "autosave_interval": 15,
        "backup_checkpoints": 5,
        "max_checkpoints": 10,
        "max_disk_usage_gb": 5.0,
        "use_best": true,
        "fresh_start": false,
        "log_dir": "logs",
        "wandb_project": "cities-skylines-rl",
        "wandb_name": "auto",
        "use_lr_scheduler": true,
        "lr_step_size": 100,
        "lr_gamma": 0.9,
        "render": false,
        "debug": false,
        "eval_episodes": 5,
        "eval_interval": 100,
        "save_video": false,
        "video_fps": 30
    },
    "environment": {
        "game_path": "",
        "process_name": "CitiesSkylines2",
        "window_name": "Cities: Skylines II",
        "connection_timeout": 60,
        "retry_attempts": 3,
        "retry_delay": 5,
        "capture_method": "windows",
        "capture_fps": 30,
        "max_episode_length": 3600,
        "input_delay": 0.05,
        "reward_scale": 1.0,
        "grayscale": false,
        "normalize_input": true,
        "use_curriculum": false,
        "curriculum_stages": 5
    },
    "model": {
        "backbone": "optimized",
        "hidden_size": 512,
        "activation": "relu",
        "xavier_init": true,
        "normalize_inputs": true,
        "use_lstm": true,
        "lstm_hidden_size": 256,
        "use_attention": false,
        "attention_heads": 4
    },
    "logging": {
        "level": "INFO",
        "console_level": "INFO",
        "file_level": "DEBUG",
        "log_to_file": true,
        "log_dir": "logs",
        "log_metrics_interval": 10,
        "log_hardware_interval": 60
    },
    "performance": {
        "warning_threshold": 0.85,
        "critical_threshold": 0.95,
        "cpu_threshold": 90.0,
        "memory_threshold": 90.0,
        "gpu_threshold": 90.0,
        "disk_io_threshold": 100.0,
        "history_size": 20,
        "check_interval": 60
    }
} 